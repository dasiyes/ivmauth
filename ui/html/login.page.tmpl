{{template "base" .}}

{{define "title"}}Login{{end}}

{{define "main"}}
    <div class="login-container">  
        <section class="login" id="login">
            <header>
                <h2>Application Name</h2>
                <h4>Login</h4>
            </header>
            <form class="login-form" action='/oauth/login' method='POST' novalidate>
                <input type='hidden' name='csrf_token' value='{{.CSRFToken}}'>
                <input type='hidden' name='client_id' value='{{.ClientID}}'>
                {{with .Form}}
                    {{with .Errors.Get "generic"}}
                        <div class='error'>{{.}}</div>
                    {{end}}
                    <div>
                        <input type='email' class="login-input" placeholder="email" name='email' value='{{.Get "email"}}' required>
                    </div>
                    <div>
                        <input type='password' class="login-input" placeholder="Password" name='password' required>
                    </div>
                    <div class="submit-container">
                        <button type='submit' class="login-button">Login</button>
                    </div>
                {{end}}
            </form>
        </section>
        <p>2016 - <a href="https://www.twitter.com/isacfadoni">Isac Fadoni</a></p>
    </div>
    <button id="e1">Login error!</button>
{{end}}
