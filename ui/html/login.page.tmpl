{{template "base" .}}

{{define "title"}}Login{{end}}

{{define "main"}}
    <div class="login-container">  
        <section class="login" id="login">
            <header>
                <h2>Login</h2>
                <h4>welcome back</h4>
            </header>
            <form class="login-form" action='/oauth/login' method='POST'>
                <input type='hidden' name='csrf_token' value='{{.CSRFToken}}'>
                <input type='hidden' name='client_id' value='{{.ClientID}}'>
                {{with .Form}}
                    {{with .Errors.Get "generic"}}
                        <div class='error'>{{.}}</div>
                    {{end}}
                    <div>
                        <input type='email' class="login-input" placeholder="email" name='email' value='{{.Get "email"}}' required>
                    </div>
                    <div>
                        <input type='password' class="login-input" placeholder="Password" name='password' required>
                    </div>
                    <div class="submit-container">
                        <button id="e1" type="submit" class="login-button">Login</button>
                    </div>
                {{end}}
            </form>

            <div id="g_id_onload"
                data-client_id="755477323135-ai15g84hp3ht4vn1lutcibpa4es22m49.apps.googleusercontent.com"
                data-context="signin"
                data-ux_mode="popup"
                data-login_uri="https://ivmanto.dev/oauth/login"
                data-auto_prompt="false">
            </div>

            <div class="g_id_signin"
                data-type="standard"
                data-shape="rectangular"
                data-theme="outline"
                data-text="signin_with"
                data-size="large"
                data-locale="en-GB"
                data-logo_alignment="left"
                data-width="310">
            </div>

        </section>
    </div>

    <button id="e1" hidden>Login error!</button>

{{end}}
