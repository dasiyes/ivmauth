{{define "base"}}
<!doctype html>
<html lang='en'>
    <head>
        <meta charset='utf-8'>
        <title>{{template "title" .}} - Ivmanto</title>
        <link rel='stylesheet' href='/assets/css/oauth-main.css'>
        <link rel='shortcut icon' href='/assets/img/favicon.ico' type='image/x-icon'>
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Josefin+Sans:wght@100;400;700&display=swap" rel="stylesheet">
    </head>
    <body>
        <main>
            {{with .Flash}}
                <div class='flash'><p>{{.}}</p></div>
            {{end}}
            {{template "main" .}}
        </main>
        {{template "footer" .}}
        <script src="/assets/js/oauth-main.js" type="text/javascript"></script>
    </body>
</html>
{{end}}
